<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="943dp"
        android:layout_height="419dp"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bargraph"
            android:layout_width="373dp"
            android:layout_height="259dp"
            android:visibility="gone"></com.github.mikephil.charting.charts.BarChart>

        <RelativeLayout
            android:layout_width="747dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/benz_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/benz_car" />

            <ImageView
                android:id="@+id/red_cir"
                android:layout_width="363dp"
                android:layout_height="239dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="343dp"
                app:srcCompat="@drawable/red_circle" />

            <com.rtugeek.android.colorseekbar.ColorSeekBar
                android:id="@+id/color_seek_bar"
                android:layout_width="713dp"
                android:layout_height="67dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                app:colorSeeds="@array/custom_colors"
                app:showAlphaBar="true"></com.rtugeek.android.colorseekbar.ColorSeekBar>
            <!--
            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="209dp"
                android:layout_marginTop="91dp"
                android:text="●"
                android:textAlignment="center"
                android:textSize="80sp"
                tools:visibility="gone" />
                -->

            <ImageView
                android:id="@+id/red_cir_2"
                android:layout_width="144dp"
                android:layout_height="83dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="339dp"
                app:srcCompat="@drawable/red_circle" />


            <ImageView
                android:id="@+id/red_cir_3"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="156dp"
                android:layout_marginEnd="345dp"
                app:srcCompat="@drawable/red_door_4" />

            <ImageView
                android:id="@+id/red_cir_6"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="396dp"
                app:srcCompat="@drawable/red_door_3_bottom" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="-7dp"
                app:srcCompat="@drawable/linie_albastra_lr" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/linie_albastra_lr" />

            <Button
                android:id="@+id/ambient_menu_1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Clear"></Button>

                <Button
                    android:id="@+id/ambient_menu_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Button 2"></Button>

                <Button
                    android:id="@+id/ambient_menu_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Button 3"></Button>

                <Button
                    android:id="@+id/ambient_menu_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Button 4"></Button>

                <Button
                    android:id="@+id/ambient_menu_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Button 5"></Button>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_weight="1"
        android:freezesText="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/send_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="text|textNoSuggestions"
            android:visibility="gone"
            android:singleLine="true"
             />

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_send_white_24dp" />

    </LinearLayout>


</LinearLayout>

